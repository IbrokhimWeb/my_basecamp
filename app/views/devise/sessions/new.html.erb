<body class="body-2">
<div class="box">
</div> 
<div class=" sign container-2">

<%= stylesheet_link_tag "sign" %>
<img class ="img_g" src="https://cdn.worldvectorlogo.com/logos/basecamp-logo-2019-1.svg" alt="">
<h2 class="h2">Log in to My Basecamp</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field"><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control",placeholder: "Enter your email (example@gmail.com)" %>
  </div>

  <div class="field"><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Enter your password (123456)" %>
  </div>

 

  <div class="actions"> 
  <%= link_to "Sign up", new_registration_path(resource_name), class: "btn__5" %>
    <%= f.submit "Log in", data: {turbo: false}, class: "btn__5" %>
    
    
  </div>
  
  <%= link_to "Forgot your password?", new_password_path(resource_name), class: "forget" %>
<% end %>


</div>
</body>