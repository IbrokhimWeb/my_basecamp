<body class="body-2">
<%= stylesheet_link_tag "sign" %>
<div class="box">
</div> 
<div class="container-2">
<img class ="img_g" src="https://cdn.worldvectorlogo.com/logos/basecamp-logo-2019-1.svg" alt="">
 <h2>Forgot your password?</h2>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %> 

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control", placeholder: "Enter your email (example@gmail.com)" %>
  </div><br>

  <div class="actions">
    <%= f.submit "New Password", data: {turbo: false}, class: "btn__btn btn-warning" %>
  </div>
<% end %>

<div style="display: flex; gap: 10px;">
<%= link_to "Log in", new_session_path(resource_name), class: "btn__5"%>
<%= link_to "Sign up", new_registration_path(resource_name), class: "btn__5" %>
</div>

 </div>


</body>